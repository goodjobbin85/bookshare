<h1>User Details</h1>

<p><%= @user.name %></p>
<p><%= @user.email %></p>
<p><%= @user.password %></p>


<a href="/">Home</a>
<a href="/users/<%= @user.id %>/edit">Edit</a>
<form action="/users/<%= @user.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="delete">
</form>

<h1>All Your Books</h1>
<ol>
  <% @user.books.each do |book| %>
    <li><a href="/books/<%= book.id %>"><%= book.title %></a></li>
  <% end %>
</ol>

<h1>Your Borrowed Books</h1>


<h1>Give A Book</h1>

<form method="POST" action="/books">
  <p>
    <label for="title" id="title">Title</label>
    <input type="text" id="title" name="title">
  </p>
  <p>
    <label for="author" id="author">Author</label>
    <input type="text" id="author" name="author">
  </p>
  <p>
    <label for="year_published" id="year_published">Year Published</label>
    <input type="text" id="year_published" name="year_published">
  </p>
  <p>
    <label for="condition" id="condition">Condition</label>
    <input type="text" id="condition" name="condition">
  <p>
    <input type="submit" value="submit">
</form>

<div align="center">
  <p><a href="/logout">Log Out</a></p>
</div>
